public class yildizdeseni {
    public static void main(String[] args) {
        int satirSayisi = 6; // Toplam satır sayısı
        int yildizSayisi = 1; // İlk satırdaki yıldız sayısı

        for (int i = 0; i < satirSayisi; i++) {
            for (int j = 0; j < yildizSayisi; j++) {
                System.out.print("*");
            }
            System.out.println(); // Her satırın sonunda yeni satıra geç
            if (i < 1) {
                yildizSayisi++;
            } else {
                yildizSayisi += 2; // İkinci satırdan itibaren 2 arttır
            }
        }
    }
}
